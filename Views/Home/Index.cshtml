@if (ViewData["Slayt"] != null && ((List<FilmFree.Models.anasayfaSlayt>)ViewData["Slayt"]).Count != 0)
{
    <section class="pt-0 pb-0">
        <div class="container-fluid px-0">
            <div class="row no-gutters">
                <div class="col-12">
                    <div class="gen-banner-movies banner-style-2">
                        <div class="owl-carousel owl-loaded owl-drag" data-dots="false" data-nav="true" data-desk_num="1"
                             data-lap_num="1" data-tab_num="1" data-mob_num="1" data-mob_sm="1" data-autoplay="true"
                             data-loop="true" data-margin="0">
                            @foreach (var item in (List<FilmFree.Models.anasayfaSlayt>)ViewData["Slayt"])
                            {

                            <div class="item" style="background: url('/images/film/@item.resimYoluHD')">
                                <div class="gen-movie-contain-style-2 h-100">
                                    <div class="container h-100">
                                        <div class="row flex-row-reverse align-items-center h-100">
                                            <div class="col-xl-6">
                                                <div class="gen-front-image">
                                                    <img src="~/images/film/@item.resimYoluHD_2" alt="owl-carousel-banner-image">
                                                    <a href="/Home/Izle?id=@item.filmId" class="playBut">
                                                        <!-- Generator: Adobe Illustrator 19.0.0, SVG Export Plug-In  -->
                                                        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" width="213.7px"
                                                             height="213.7px" viewBox="0 0 213.7 213.7"
                                                             enable-background="new 0 0 213.7 213.7" xml:space="preserve">
                                                        <polygon class="triangle" id="XMLID_17_" fill="none" stroke-width="7"
                                                                 stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10"
                                                                 points="
                                                            73.5,62.5 148.5,105.8 73.5,149.1 "></polygon>
                                                        <circle class="circle" id="XMLID_18_" fill="none" stroke-width="7"
                                                                stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10"
                                                                cx="106.8" cy="106.8" r="103.3">
                                             </circle>
                                          </svg>
                                                        <span>Şimdi İzle</span>
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="col-xl-6">
                                                <div class="gen-tag-line"><span>@item.onerimSekli</span></div>
                                                <div class="gen-movie-info">
                                                    <h3>@item.Film.Isim</h3>
                                                </div>
                                                <div class="gen-movie-meta-holder">
                                                    <ul class="gen-meta-after-title">
                                                        <li class="gen-sen-rating">
                                                            <span>
                                                                @item.Film.FilmTur.FirstOrDefault().TurAdi
                                                            </span>
                                                        </li>
                                                        <li>
                                                            @if (item.Film.Dil == "TürkçeDublaj")
                                                            {
                                                            <span>Dublaj</span>
                                                        }
                                                        else if (item.Film.Dil == "TürkçeAltyazılı")
                                                        {
                                                            <span>Altyazı</span>
                                                        }
                                                        else
                                                        {
                                                            <span>Dublaj / Altyazı</span>
                                                        }
                                                           
                                                            </li>
                                                        </ul>
                                                    <div class="gen-movie-info">
                                                        <div>

                                                            @item.Film.Icerik

                                                        </div>
                                                    </div>
                                                    <div class="gen-meta-info">
                                                        <ul class="gen-meta-after-excerpt">
                                                            <li>
                                                                <strong>OYUNCULAR :</strong>
                                                                @item.Film.Oyuncular
                                                            </li>
                                                            <li>
                                                                <strong>TÜR :</strong>
                                                                @foreach (var tur in item.Film.FilmTur)
                                                                {
                                                                    <span>
                                                                        <a href="/Home/Filtrele?Tur=@tur.id">
                                                                            @tur.TurAdi 
                                                                        </a>
                                                                    </span>
                                                                }

                                                               
                                                            </li>
                                                            <li>
                                                                <strong>TAG :</strong>
                                                                <span>
                                                                    
                                                                        @item.Film.Tags
                                                                    
                                                                </span>
                                                                
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                                <div class="gen-movie-action">
                                                    <div class="gen-btn-container">
                                                        <a href="/Home/Izle?id=@item.filmId" class="gen-button .gen-button-dark">
                                                            <i aria-hidden="true" class="fas fa-play"></i> <span class="text">
                                                                Şimdi Oynat
                                                            </span>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            }


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
<!-- owl-carousel Banner End -->
