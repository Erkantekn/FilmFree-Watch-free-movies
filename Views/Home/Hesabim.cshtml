
@{
    ViewBag.Title = "Hesap Ayarları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model FilmFree.Models.Kullanicilar 
<section class="position-relative pb-0">
   
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center">
                    <form id="pms_register-form" class="pms-form" method="POST" action="/Home/Hesabim">
                        <h4>Hesap Bilgileri</h4>
                        <ul class="pms-form-fields-wrapper pl-0">
                            <li class="pms-field pms-user-email-field">
                                <label for="pms_user_email">Kayıt Tarihi : @Model.KayitTarihi.ToShortDateString()</label>
                            </li>
                            <li class="pms-field pms-user-email-field " style="width:100%;">
                            </li>
                            <li class="pms-field pms-user-login-field ">
                                <label for="pms_user_login">Kullanıcı Adı: @Model.kAdi</label>
                            </li>
                            <li class="pms-field pms-user-email-field ">
                                <label for="pms_user_email">E-Mail: @Model.Mail</label>
                            </li>

                            <li class="pms-field pms-first-name-field ">
                                <label for="pms_first_name">Ad</label>
                                <input id="pms_first_name" name="Ad" type="text" value="@Model.Ad" maxlength="50">
                            </li>
                            <li class="pms-field pms-last-name-field ">
                                <label for="pms_last_name">Soyad</label>
                                <input id="pms_last_name" name="Soyad" type="text" value="@Model.Soyad" maxlength="50">
                            </li>

                            <li class="pms-field pms-pass1-field">
                                <label for="pms_pass1">Yeni Şifre </label>
                                <input id="pms_pass1" name="Sifre" type="password" maxlength="20" >
                            </li>
                            <li class="pms-field pms-pass2-field">
                                <label for="pms_pass2">Yeni Şifre Tekrarı </label>
                                <input id="pms_pass2" name="SifreTekrari" type="password" maxlength="20" >
                            </li>
                            <li class="pms-field pms-pass1-field">
                                <label for="pms_pass1">Mevcut Şifre *</label>
                                <input id="pms_pass1" name="eskiSifre" type="password" maxlength="20" required>
                                <label for="pms_pass1">Kaydetmek İçin Mevcut Şifrenizi Giriniz.</label>
                            </li>

                            @if (TempData["Hata"] != null)
                            {
                                <li style="width:100%;">
                                    <div class="alert alert-info" role="alert">
                                        @TempData["Hata"]
                                    </div>
                                </li>
                                TempData["Hata"] = null;
                            }
                            <li style="width:100%;"> <input name="pms_register" type="submit" value="Kaydet"></li>
                        </ul>


                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

