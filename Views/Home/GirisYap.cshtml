
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta name="keywords" content="Reklamsız film izle, Full hd film izle, En yeni filmleri izle" />
    <meta name="description" content="Reklamsız full HD film izleme platformu. Sitemizde bize ait hiçbir reklam bulunmamaktır. Sitemizde bulunan reklamlar film sağlayıcısının sitesinde bulunan reklamlardır." />
    <meta name="author" content="Erkan" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Giriş Yap - Filmfree Reklamsız Film İzleme Sitesi</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/images/favicon.ico">
    <!-- CSS bootstrap-->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <!--  Style -->
    <link rel="stylesheet" href="~/css/style.css" />
    <!--  Responsive -->
    <link rel="stylesheet" href="~/css/responsive.css" />
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>

<body>

    <!--=========== Loader =============-->
    <div id="gen-loading">
        <div id="gen-loading-center">
            <img src="~/images/logo-1.png" alt="loading">
        </div>
    </div>
    <!--=========== Loader =============-->
    <!-- Log-in  -->
    <section class="position-relative pb-0">
        <div class="gen-login-page-background" style="background-image: url('/images/background/film-arkaplan.jpg');"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center">
                        <div>
                            <a class="navbar-brand" href="/Home/Index">
                                <img class="img-fluid logo" src="~/images/logo-1.png" alt="FilmFree reklamsız film">
                            </a>
                        </div>
                        <form name="pms_login" id="pms_login" action="/Home/GirisYap" method="post">
                            <h4>Giriş Yap</h4>
                            <p class="login-username">
                                <label for="user_login">Kullanıcı Adı</label>
                                <input type="text" name="kAdi" id="user_login" class="input" value="" size="20" required>
                            </p>
                            <p class="login-password">
                                <label for="user_pass">Şifre</label>
                                <input type="password" name="Sifre" id="user_pass" class="input" value="" size="20" required>
                            </p>
                            <p class="login-remember">
                                <label>
                                    <input name="BeniHatirla" type="checkbox" value="true" />Beni Hatırla
                                    <input name="BeniHatirla" type="hidden" value="false" />
                                </label>
                            </p>

                            <p style="width:100%;">
                                <div class="g-recaptcha" data-sitekey="6LcQ7RobAAAAAC8R7i5V6PwDHEkpDxurgEv35yZp"></div>
                            </p>
                            @if (TempData["Hata"] != null)
                            {
                                <p style="width:100%;">
                                    <div class="alert alert-info" role="alert">
                                        @TempData["Hata"]
                                    </div>
                                </p>
                                TempData["Hata"] = null;
                            }
                            <p class="login-submit">
                                <input type="submit" name="wp-submit" id="wp-submit" class="button button-primary"
                                       value="Giriş Yap">
                                <input type="hidden" name="redirect_to">
                            </p>

                            <input type="hidden" name="pms_login" value="1"><input type="hidden" name="pms_redirect"><a href="/Home/Kaydol">Kayıt Ol</a> | <a href="/Home/TekrarMailAktivasyonuGonder"> Şifreni Mi Unuttun?</a> | <a href="/Home/TekrarMailAktivasyonuGonder"> Tekrar Mail Aktivasyonu Gönder</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Log-in  -->
    <!-- Back-to-Top start -->
    <div id="back-to-top">
        <a class="top" id="top" href="#top"> <i class="ion-ios-arrow-up"></i> </a>
    </div>
    <!-- Back-to-Top end -->
    <!-- js-min -->
    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="~/js/asyncloader.min.js"></script>
    <!-- JS bootstrap -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- owl-carousel -->
    <script src="~/js/owl.carousel.min.js"></script>
    <!-- counter-js -->
    <script src="~/js/jquery.waypoints.min.js"></script>
    <script src="~/js/jquery.counterup.min.js"></script>
    <!-- popper-js -->
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/swiper-bundle.min.js"></script>
    <!-- Iscotop -->
    <script src="~/js/isotope.pkgd.min.js"></script>

    <script src="~/js/jquery.magnific-popup.min.js"></script>

    <script src="~/js/slick.min.js"></script>

    <script src="~/js/filmFree-core.js"></script>

    <script src="~/js/script.js"></script>


</body>

</html>