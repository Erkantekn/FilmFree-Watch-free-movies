
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta name="keywords" content="Reklamsız film izle, Full hd film izle, En yeni filmleri izle" />
    <meta name="description" content="Reklamsız full HD film izleme platformu. Sitemizde bize ait hiçbir reklam bulunmamaktır. Sitemizde bulunan reklamlar film sağlayıcısının sitesinde bulunan reklamlardır." />
    <meta name="author" content="Erkan" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Aktivasyon - FilmFree Reklamsız Film İzleme Sitesi</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/images/favicon.ico">
    <!-- CSS bootstrap-->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <!--  Style -->
    <link rel="stylesheet" href="~/css/style.css" />
    <!--  Responsive -->
    <link rel="stylesheet" href="~/css/responsive.css" />
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>

<body>

    <!--=========== Loader =============-->
    <div id="gen-loading">
        <div id="gen-loading-center">
            <img src="~/images/logo-1.png" alt="loading">
        </div>
    </div>
    <!--=========== Loader =============-->
    <!-- Recover-Password -->
    <section class="position-relative pb-0">
        <div class="recover-password-page-background" style="background-image:url('/images/background/film-arkaplan.jpg');">
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                   
                    <div class="text-center">
                        <div>
                            <a class="navbar-brand" href="/Home/Index">
                                <img class="img-fluid logo" src="~/images/logo-1.png" alt="FilmFree reklamsız film">
                            </a>
                        </div>
                        <form id="pms_recover_password_form" class="pms-form" method="post" action="/Home/TekrarMailAktivasyonuGonder">
                            <h4>Link Maili Gönder</h4>
                            <input type="hidden" id="pmstkn" name="pmstkn" value=""><input type="hidden"
                                                                                           name="_wp_http_referer" value="/recover-password/">
                            <p class="font-weight-bold">
                                Lütfen e-posta adresinizi giriniz.</br>
                                Seçtiğiniz işleme göre mail hesabınıza link gönderilecektir.
                            </p>
                            <ul class="pms-form-fields-wrapper pl-0 mb-4">
                                <li class="pms-field">
                                    <label for="pms_username_email">E-Posta Adresi:</label>
                                    <input id="pms_username_email" name="email" type="email" value="" required>
                                </li>
                                <li class="pms-field">
                                    <input type="radio" id="age1" name="tip" value="mail" checked="checked">
                                    <label for="age1">Tekrar Mail Aktivasyonu Gönder</label><br>
                                    <input type="radio" id="age2" name="tip" value="sifre">
                                    <label for="age2">Şifremi Sıfırla</label><br>
                                </li>
                                <li style="width:100%;">
                                    <div class="g-recaptcha" data-sitekey="6LcQ7RobAAAAAC8R7i5V6PwDHEkpDxurgEv35yZp"></div>
                                </li>
                                @if (TempData["Hata"] != null)
                                {
                                    <li style="width:100%;">
                                        <div class="alert alert-info" role="alert">
                                            @TempData["Hata"]
                                        </div>
                                    </li>
                                    TempData["Hata"] = null;
                                }
                                <li style="width:100%;"><a href="/Home/GirisYap">Giriş Yap</a></li>
                            </ul>
                            <input type="submit" name="submit" value="Gönder">

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Recover-Password -->
    <!-- Back-to-Top start -->
    <div id="back-to-top">
        <a class="top" id="top" href="~/#top"> <i class="ion-ios-arrow-up"></i> </a>
    </div>
    <!-- Back-to-Top end -->
    <!-- js-min -->
    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="~/js/asyncloader.min.js"></script>
    <!-- JS bootstrap -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- owl-carousel -->
    <script src="~/js/owl.carousel.min.js"></script>
    <!-- counter-js -->
    <script src="~/js/jquery.waypoints.min.js"></script>
    <script src="~/js/jquery.counterup.min.js"></script>
    <!-- popper-js -->
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/swiper-bundle.min.js"></script>
    <!-- Iscotop -->
    <script src="~/js/isotope.pkgd.min.js"></script>

    <script src="~/js/jquery.magnific-popup.min.js"></script>

    <script src="~/js/slick.min.js"></script>

    <script src="~/js/filmFree-core.js"></script>

    <script src="~/js/script.js"></script>


</body>

</html>