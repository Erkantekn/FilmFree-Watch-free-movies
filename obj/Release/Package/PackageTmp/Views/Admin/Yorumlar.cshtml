        $('body').on('click', '.yorum-onayla-tekli', function () {
            var btn = $(this);
            $.ajax({
                type: "GET",
                url: "/Admin/YorumOnaylaTek?id=" + btn.data("id"),
                success: function (e) {
                    btn.removeClass("yorum-onayla-tekli");
                    btn.text("Onaylandı");
                }, error: function () {
                    btn.text("Onaylanırken Hata");
                }
